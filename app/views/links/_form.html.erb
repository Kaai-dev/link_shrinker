<%= form_with(model: link) do |form| %>
  <% if link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>
      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='mb-5'>
    <%= form.label :input_url, style: "display: block", class:'mb-2' %>
    <%= form.text_field :input_url, class: 'form-control'  %>
  </div>
  <div class=' mt-4 mb-2 d-flex justify-content-evenly'>
    <%= form.submit 'Shrink', class: 'btn btn-sm btn-outline-success action-btn' %>
    <%= link_to "Cancel", link.try(:persisted?) ? link_path(link) : links_path, class: "btn btn-outline-danger btn-sm action-btn" %>
  </div>
<% end %>
