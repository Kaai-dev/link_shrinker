<%= form_with(model: link, class: "needs-validation") do |form| %>
  <% if link.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h5>
      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :input_url, "Input URL", class: "form-label fw-bold" %>
    <%= form.text_field :input_url, class: "form-control", placeholder: "Enter the URL to shrink" %>
  </div>

  <div class="d-flex justify-content-evenly mt-4">
    <%= form.submit 'Shrink', class: 'btn btn-success btn-sm px-4' %>
    <%= link_to "Cancel", link.try(:persisted?) ? link_path(link) : links_path, class: "btn btn-danger btn-sm px-4" %>
  </div>
<% end %>

