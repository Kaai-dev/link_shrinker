<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-center align-items-center">
  <div class="card shadow" style="width: 50%;" >
    <div class="card-header d-flex justify-content-between align-items-center">
      <h4 class="mb-0">URL Map</h4>
      <%= link_to "New Shrink", new_link_path, class: "btn btn-primary btn-sm" %>
    </div>
    <div class="card-body text-center">
      <br>
      <% if Link.exists? %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">URL</th>
              <th scope="col">Shrinked URL</th>
              <th scope="col">More Info</th>
            </tr>
          </thead>
          <tbody>
            <% @links.each do |link| %>
              <tr>
                <td><%= link.input_url %></td>
                <td><%= link_to short_url(shrinked_url: link.shrinked_url), short_url(shrinked_url: link.shrinked_url) %></td>
                <td><%= link_to "Show this link", link, class: 'btn btn-sm btn-outline-warning ' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>You Currently have no links shrinked.</p>
      <% end %>

    </div>
  </div>
</div>